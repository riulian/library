<%= search_form_for @q do |f|%>
  <div style="width:30%;" class="form-group">
    
    <%= f.text_field :title_cont, class: "form-control", placeholder: "Search"%>
      
    <%=f.submit 'Search books', class: "btn btn-primary" %>
  </div> 
 
<%end%>

<h1 style="color:#0965e6;">Books</h1>
<%= paginate @books, params: {controller: 'books', action: 'index', data: {turbo: false}} %>

<div id="books">

<table class='table table-striped table-bordered table-hover'>
<thead class="table-dark">
    <tr>
      <th>Book</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

  <% @books.each do |book| %>
  <tr>
    <%= render book %>
    
      <td><%= link_to "Show", book %></td>
      <td><%= link_to "Edit", edit_book_path(book) %></td>
      <td><%= button_to "Delete",book, method: :delete, class: "button",
                     data: {turbo: false, method: :delete, confirm: "Really?" } %></td>
      
      
    </tr>
  <% end %>
  </tbody>
  </table>
</div>
<%= paginate @books, params: {controller: 'books', action: 'index', data: {turbo: false}} %></br>


