

<h1 style="color:#0965e6;">Books</h1>
<%= paginate @books, params: {controller: 'books', action: 'index', format: :turbo_stream} %>

<div id="books">

<table class='table table-striped table-bordered table-hover'>
<thead class="table-dark">
    <tr>
      <th>Book</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

  <% @books.each do |book| %>
  <tr>
    <%= render book %>
    
      <td><%= link_to "Show", book %></td>
      <td><%= link_to "Edit", edit_book_path(book) %></td>
      <td><%= button_to "Delete",book, method: :delete, class: "button",
                     data: {turbo: false, method: :delete, confirm: "Really?" } %></td>
      
      
    </tr>
  <% end %>
  </tbody>
  </table>
</div>
<%= paginate @books, params: {controller: 'books', action: 'index', format: :turbo_stream} %></br>


<%= link_to "New book", new_book_path, class: "btn btn-primary" %>


