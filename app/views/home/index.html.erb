<h1>Library</h1>
<p style="color: green"><%= notice %></p>

<h1 style= "margin-left: 450px;">Users</h1>

<div id="users" style="width: 60%;padding: 12px 20px;">

<table class='table table-striped table-bordered table-hover'>
<thead class="table-dark">
    <tr>
      <th>Email</th>
      
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>

  <% @users.each do |user| %>
    <tr>
    <div id="<%= dom_id user %>">
     
    <td><%= user.email %></td>
  

</div>

    
      <td><%= link_to "Show this user", home_show_path(user) %></td>
    </tr>
  <% end %>
  </tbody>
  </table>
</div>


